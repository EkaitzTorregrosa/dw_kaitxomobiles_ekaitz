{% extends 'base.html.twig' %}

{% block title %}Mobiles index{% endblock %}

{% block body %}

    <div class="container">
        <div class="row">
            <div class="col-10 mx-auto">
                <div class="card bg-light">
                    <div class="card-header d-flex justify-content-between  bg-dark text-white">
                        <div>
                            <h5 class="">Móvil</h5>
                        </div>
                        <div>
                            <a class="mr-0" href="{{ path('mobiles_new') }}">Crear un nuevo móvil</a>
                        </div>
                    </div>

                    <div class="card-body">

                        <ul class="list-group">
                            {% for mobile in mobiles %}
                                <div class="card list-group-item ">
                                    <div class="card-body">
                                        <ul class="list-group">
                                            <li class="list-group-item pb-2">
                                                <div class="lead"><h6 class="text-muted">Nombre</h6></div>
                                                <div class="lead">{{ mobile.name }}</div >
                                            </li>
                                            <li class="list-group-item pb-2">
                                                <div class="lead"><h6 class="text-muted">Descripcion</h6></div>
                                                <div class="lead">{{ mobile.description }}</div>
                                            </li>
                                            <li class="list-group-item pb-2">
                                                <div class="lead"><h6 class="text-muted">urlPicture</h6></div>
                                                <div class="lead">{{ mobile.urlPicture }}</div>
                                            </li>
                                            <li class="list-group-item pb-2">
                                                <div class="lead"><h6 class="text-muted">Precio</h6></div>
                                                <div class="lead">{{ mobile.price }}</div>
                                            </li>

                                            <li class="list-group-item pb-2 ml-auto border-left-0 border-right-0 border-bottom-0 ">
                                                <ul class="list-inline">
                                                    <li class="list-inline-item">
                                                        <a class="btn btn-outline-primary" href="{{ path('mobiles_show', { 'id': mobile.id }) }}">
                                                            <span class="fa fa-info p-2"> </span>Mostrar
                                                        </a>
                                                    </li>
                                                    <li class="list-inline-item">
                                                        <a class="btn btn-outline-info" href="{{ path('mobiles_edit', { 'id': mobile.id }) }}">
                                                            <span class="fa fa-edit p-2"> </span>Editar
                                                        </a>
                                                    </li>
                                                </ul>
                                            </li>
                                        </ul>
                                    </div>
                                </div>
                                <hr/>
                            {% endfor %}
                        </ul>

                    </div>
                </div>

            </div>
        </div>
    </div>
{% endblock %}
