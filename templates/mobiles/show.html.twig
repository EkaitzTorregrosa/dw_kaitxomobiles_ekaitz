{% extends 'base.html.twig' %}

{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-10 mx-auto">
                <div class="card">
                    <h5 class="card-header">Móvil</h5>
                    <div class="card-body">

                        <table class="table-borderless table-responsive">
                            <tr scope="row" class="pb-2">
                                <td ><h6 class="text-muted">Nombre</h6></td>
                                <td>{{ mobile.name }}</td>
                            </tr>
                            <tr scope="row" class="pb-2">
                                <td><h6 class="text-muted">Descripción</h6></td>
                                <td>{{ mobile.description }}</td>
                            </tr>
                            <tr scope="row" class="pb-2">
                                <td><h6 class="text-muted">Imagen</h6></td>
                                <td> <img class="card-img-top rounded mx-auto d-block avatar" src='{{ mobile.urlPicture }}'></td>
                            </tr>
                            <tr scope="row" class="pb-2">
                                <td><h6 class="text-muted">Precio</h6></td>
                                <td>{{ mobile.price }}</td>
                            </tr>
                        </table>
                    </div>  
                    <ul class="list-inline-group mt-5 card-footer mb-0">
                        <li class="list-inline-item">
                            <a  class="btn btn-outline-secondary" href="{{ path('mobiles_edit', { 'id': mobile.id }) }}">Editar</a>
                        </li>
                        <li class="list-inline-item">
                            {{ include('mobiles/_delete_form.html.twig') }}
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
{% endblock %}