<form method="post" action="{{ path('mobiles_delete', {'id': mobile.id}) }}" href="{{ path('mobiles_index') }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ mobile.id) }}">
    <button class="btn">Delete</button>
</form>
